<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StatisticsFragment"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/topBarColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey0"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ScrollView
        android:id="@+id/statisticScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        android:background="@color/transparent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey0"
            android:paddingBottom="60dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/topRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:paddingBottom="0dp"
                app:cardBackgroundColor="@color/transparent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background_bottom_rounded"
                    android:padding="10dp"
                    >
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/lottieLogo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        app:placeholderImage="@drawable/ic_coronavirus_icon_app"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lottieLogo"
                        android:gravity="center"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/logoTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MODO"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:layout_toStartOf="@+id/topLoadingAnimation"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/logoSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logoTitle"
                            android:text="Covid-19 au Cameroun"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:ellipsize="end"
                            android:layout_toStartOf="@+id/topLoadingAnimation"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            />
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/topLoadingAnimation"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:scaleType="fitCenter"
                            app:lottie_rawRes="@raw/loading"
                            app:lottie_colorFilter="@color/white"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/middleRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lottieLogo"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/firstTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Statistiques"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/locationButton"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="10dp"
                            android:visibility="invisible"
                            app:cardCornerRadius="22.5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            >
                            <RelativeLayout
                                android:id="@+id/locationButtonClick"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_light_main_color"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                >
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/locationButtonImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_location_on_24"
                                    app:tint="@color/white"
                                    android:alpha="1"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/bottomRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/topRelative"
                >
                <LinearLayout
                    android:id="@+id/statsInfoRelative"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingTop="10dp"
                                    android:background="@drawable/ic_positivebackground"
                                    android:padding="10dp"
                                    >
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="Positifs"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textSize="16sp"
                                        />
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsPositive"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:layout_below="@+id/statsTitle"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingTop="10dp"
                                    android:background="@drawable/ic_activebackground"
                                    android:padding="10dp"
                                    >
                                    <ImageView
                                        android:id="@+id/statisticActivePoint"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:scaleType="center"
                                        android:visibility="gone"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/active_circle"
                                        android:elevation="10dp"
                                        tools:ignore="UnusedAttribute"/>
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsActiveTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="Actifs"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textSize="16sp"
                                        android:layout_toRightOf="@+id/statisticActivePoint"
                                        android:layout_toEndOf="@+id/statisticActivePoint"
                                        />
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsActive"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:layout_below="@+id/statsActiveTitle"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingTop="10dp"
                                    android:background="@drawable/ic_recoveredbackground"
                                    android:padding="10dp"
                                    >
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsRecoveredTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="Gueris"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textSize="16sp"
                                        />
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsRecovered"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:layout_below="@+id/statsRecoveredTitle"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingTop="10dp"
                                    android:background="@drawable/ic_deadbackground"
                                    android:padding="10dp"
                                    >
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsDeadTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:text="Decedes"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textSize="16sp"
                                        />
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/statsDead"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:layout_below="@+id/statsDeadTitle"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Positifs au covid-19 par regions"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/mainColor"
                    android:layout_below="@+id/statsInfoRelative"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <RelativeLayout
                    android:id="@+id/chartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/statistics"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/barChartCard"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="9dp"
                        >
                        <com.github.mikephil.charting.charts.HorizontalBarChart
                            android:id="@+id/barChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/lineChartCard"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        android:layout_below="@+id/barChartCard"
                        >
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>