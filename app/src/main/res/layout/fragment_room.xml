<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RoomFragment">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/topBarColor"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/topBarColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey0"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/topRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_background_bottom_rounded"
                        android:padding="10dp">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/lottieLogo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="centerCrop"
                            android:layout_alignParentTop="true"
                            app:placeholderImage="@drawable/ic_coronavirus_icon_app"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/lottieLogo"
                            android:gravity="center"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/logoTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MODO"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textStyle="bold|italic"
                                android:layout_toStartOf="@+id/topLoadingAnimation"
                                android:layout_marginEnd="10dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/logoSubTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/logoTitle"
                                android:text="Covid-19 au Cameroun"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:textStyle="bold|italic"
                                android:ellipsize="end"
                                android:layout_toStartOf="@+id/topLoadingAnimation"
                                android:layout_marginEnd="10dp"
                                android:maxLines="1"
                                />
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/topLoadingAnimation"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                android:scaleType="fitCenter"
                                app:lottie_colorFilter="@color/white"
                                app:lottie_rawRes="@raw/loading"
                                android:visibility="invisible"
                                />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/middleRelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lottieLogo"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/room_user_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:layout_marginEnd="10dp"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/logOutButton"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="22.5dp"
                                app:cardElevation="0dp"
                                android:visibility="invisible"
                                app:cardBackgroundColor="@color/transparent"
                                >
                                <RelativeLayout
                                    android:id="@+id/logOutButtonClick"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_light_main_color"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    >
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/logOutButtonImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        app:tint="@color/white"
                                        android:alpha="1"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/bottomRelative"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/topRelative"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/room_recycler_view_sms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:overScrollMode="never"
                        android:scrollbars="vertical"
                        android:layoutAnimation="@anim/layout_animation"
                        android:layout_margin="0dp"/>
                    <LinearLayout
                        android:id="@+id/room_no_log_sms"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        android:alpha="0"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/anonymButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            app:layout_constraintLeft_toRightOf="@+id/registerHasScreenedButton"
                            android:layout_marginStart="10dp"
                            >
                            <RelativeLayout
                                android:id="@+id/anonymButtonclick"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_color_primary"
                                android:clickable="true"
                                android:focusable="true"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/anonymButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Connexion anonyme"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="56dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/room_send_voice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <RelativeLayout
                android:id="@+id/room_send_voice_button_click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_color_primary"
                android:clickable="true"
                android:focusable="true"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/room_record_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_keyboard_voice_24"
                    app:tint="@color/white"
                    android:scaleType="center"
                    android:layout_marginStart="3dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/room_recorded_time"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/room_cancel_voice"
            app:layout_constraintLeft_toRightOf="@+id/room_send_voice"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/edit_text_light_background"
            android:text="0 sec"
            android:maxLines="1"
            android:alpha="0"
            android:ellipsize="end"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/room_edit_text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:alpha="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/edit_text_light_background"
            android:inputType="text"
            android:hint="Nouveau message"
            tools:ignore="UnusedAttribute"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/room_send_message"
            app:layout_constraintLeft_toRightOf="@+id/room_send_voice"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/room_cancel_voice"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <RelativeLayout
                android:id="@+id/room_cancel_voice_button_click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_color_primary"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tint="@color/white"
                    android:text="Annuler"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginStart="3dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/room_send_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <RelativeLayout
                android:id="@+id/room_send_message_button_click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_color_primary"
                android:clickable="true"
                android:focusable="true"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_send_24"
                    app:tint="@color/white"
                    android:scaleType="center"
                    android:layout_marginStart="3dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>