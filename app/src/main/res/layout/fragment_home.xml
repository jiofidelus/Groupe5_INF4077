<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/topBarColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey0"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:background="@color/grey0"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/topRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/transparent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background_bottom_rounded"
                    android:padding="10dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/lottieLogo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        app:placeholderImage="@drawable/ic_coronavirus_icon_app"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lottieLogo"
                        android:gravity="center"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/logoTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MODO"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:layout_toStartOf="@+id/topLoadingAnimation"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/logoSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logoTitle"
                            android:text="Covid-19 au Cameroun"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:ellipsize="end"
                            android:layout_toStartOf="@+id/topLoadingAnimation"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            />
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/topLoadingAnimation"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_colorFilter="@color/white"
                            android:scaleType="fitCenter"
                            app:lottie_rawRes="@raw/loading"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/middleRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lottieLogo"
                        android:layout_marginTop="10dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/firstTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Avez vous l'air malade ? "
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:maxLines="1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/firstSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/firstTitle"
                            android:layout_marginTop="10dp"
                            android:text="Si vous ne vous sentez pas bien ou que vous semblez presenter certains symptomes du covid-19, s'il vous plait appelez nous ou envoyez nous un sms immediatement pour vous aider."
                            android:textSize="14sp"
                            android:textColor="@color/subWhite"
                            android:ellipsize="end"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/middleRelative"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/callButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            >
                            <RelativeLayout
                                android:id="@+id/callButtonClick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ripple_light_red"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:gravity="center"
                                >
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/callButtonIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="2dp"
                                    android:src="@drawable/ic_baseline_call_24"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    app:tint="@color/white"
                                    android:layout_marginStart="10dp"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/callButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/callButtonIcon"
                                    android:layout_centerVertical="true"
                                    android:text="Appel"
                                    android:layout_marginEnd="10dp"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/smsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/callButton"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            >
                            <RelativeLayout
                                android:id="@+id/smsButtonClick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ripple_light_blue"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:padding="10dp"
                                >
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/smsButtonIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:src="@drawable/ic_baseline_sms_24"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="10dp"
                                    app:tint="@color/white"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/smsButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/smsButtonIcon"
                                    android:layout_centerVertical="true"
                                    android:text="SMS"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="10dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/bottomRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/topRelative"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conseils du jours"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/mainColor"
                    android:layout_marginBottom="10dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aucun conseil pour l'instant !!!"
                    android:layout_below="@+id/news"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="15"
                    android:ellipsize="end"
                    android:textColor="@color/grey4"
                    android:layout_marginBottom="30dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/prevention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prevention"
                    android:layout_below="@+id/message"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/mainColor"
                    android:layout_marginBottom="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/preventionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prevention"
                    android:layout_centerHorizontal="true"
                    android:overScrollMode="never"
                    android:layout_margin="0dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/testRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="9dp"
                    android:layout_below="@+id/preventionRecyclerView"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/testConstraint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/gradient_background_rounded">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/testAnimation"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerCrop"
                            app:placeholderImage="@drawable/ic_question"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/testTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Avez vous fait le test en ligne ?"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/testAnimation"
                            app:layout_constraintStart_toEndOf="@+id/testAnimation"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="20dp"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/testButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            app:layout_constraintTop_toBottomOf="@+id/testTitle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/testAnimation"
                            app:layout_constraintStart_toEndOf="@+id/testAnimation"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginBottom="10dp"
                            >
                            <RelativeLayout
                                android:id="@+id/testButtonClick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ripple_light"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:layout_gravity="end"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/testButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Demarrer le test"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/anotherTestConstraint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/gradient_background_rounded">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/anotherTestTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Votre dernier resultat de test en ligne est de :"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/anotherTestResult"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="50% de chances d'avoir le covid"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/orange"
                            android:textStyle="normal"
                            android:textSize="16sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:layout_constraintTop_toBottomOf="@+id/anotherTestTitle"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="0dp"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/anotherTestButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/transparent"
                            app:layout_constraintTop_toBottomOf="@+id/anotherTestResult"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginBottom="10dp"
                            >
                            <RelativeLayout
                                android:id="@+id/anotherTestButtonClick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ripple_light"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                >
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/anotherTestButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Nouveau test"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/white"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/symptom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testRelative"
                    android:text="Symptomes"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/mainColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/symptomRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/symptom"
                    android:layout_centerHorizontal="true"
                    android:overScrollMode="never"
                    android:layout_margin="0dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sensibilisation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/symptomRecyclerView"
                    android:text="A la une"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/mainColor"
                    android:visibility="gone"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sensibilisationRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sensibilisation"
                    android:layout_centerHorizontal="true"
                    android:overScrollMode="never"
                    android:layout_margin="0dp"
                    android:visibility="gone"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/newsSensibilisations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:text="Aucune nouveaute"
                    android:textColor="@color/grey4"
                    android:layout_below="@+id/sensibilisation"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>