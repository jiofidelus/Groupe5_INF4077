<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:id="@+id/citizenCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/citizenName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="citizen name"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/citizenPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="citizen phone"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_weight="1"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/citizenInfoButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            >
            <RelativeLayout
                android:id="@+id/citizenInfoButtonClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_white"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/citizenInfoButtonImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:scaleType="centerCrop"
                    android:layout_margin="0dp"
                    android:layout_centerInParent="true"
                    android:alpha="1"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/grey1"
        android:layout_alignParentTop="true"/>
</RelativeLayout>