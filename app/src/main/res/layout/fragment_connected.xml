<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StatisticsFragment"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/topBarColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey0"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ScrollView
        android:id="@+id/connectedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        android:background="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey0"
            android:paddingBottom="60dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/topRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:paddingBottom="0dp"
                app:cardBackgroundColor="@color/transparent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background_bottom_rounded"
                    android:padding="10dp"
                    >
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/lottieLogo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        app:placeholderImage="@drawable/ic_coronavirus_icon_app"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lottieLogo"
                        android:gravity="center"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/logoTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MODO"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:layout_toStartOf="@+id/topLoadingAnimation"
                            android:layout_marginEnd="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/logoSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logoTitle"
                            android:text="Covid-19 au Cameroun"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textStyle="bold|italic"
                            android:ellipsize="end"
                            android:layout_toStartOf="@+id/topLoadingAnimation"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            />
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/topLoadingAnimation"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:scaleType="fitCenter"
                            app:lottie_colorFilter="@color/white"
                            app:lottie_rawRes="@raw/loading"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/middleRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lottieLogo"
                        android:layout_marginTop="10dp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/accountMail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mon compte"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/accountMail"
                            android:layout_marginTop="10dp"
                            >
                            <androidx.cardview.widget.CardView
                                android:id="@+id/sensibilisationButton"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/transparent"
                                android:layout_marginTop="10dp"
                                >
                                <RelativeLayout
                                    android:id="@+id/sensibilisationButtonClick"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_light_main_color"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    >
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/sensibilisationButtonText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sensibiliser"
                                        android:textColor="@color/white"
                                        android:textStyle="normal"
                                        android:textSize="14sp"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_toEndOf="@+id/sensibilisationButton"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                >
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/listCitizenSwitch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="depistes "
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:checked="true"
                                    android:ellipsize="marquee"
                                    android:singleLine="true"
                                    app:thumbTint="@color/white"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/logOutButton"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="22.5dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/transparent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:visibility="invisible"
                                >
                                <RelativeLayout
                                    android:id="@+id/logOutButtonClick"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_light_main_color"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    >
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/logOutButtonImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        app:tint="@color/white"
                                        android:alpha="1"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/bottomRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/topRelative"
                >
                <LinearLayout
                    android:id="@+id/linearActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/newCitizenButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/transparent"
                        >
                        <RelativeLayout
                            android:id="@+id/newCitizenButtonClick"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_citizen"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/newCitizenButtonImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_add_24"
                                app:tint="@color/white"
                                android:alpha="1"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/newCitizenButtonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Citoyen"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/white"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_toEndOf="@+id/newCitizenButtonImage"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/newHasScreenedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/transparent"
                        >
                        <RelativeLayout
                            android:id="@+id/newHasScreenedButtonClick"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_hascreened"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="10dp"
                            android:gravity="center"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/newHasScreenedButtonImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_add_24"
                                app:tint="@color/white"
                                android:alpha="1"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/newHasScreenedButtonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Depister"
                                android:textColor="@color/white"
                                android:textStyle="normal"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginEnd="10dp"
                                android:layout_toEndOf="@+id/newHasScreenedButtonImage"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/citizenRelativeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearActions"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/citizenListTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Liste des citoyens enregistres"
                        android:textColor="@color/ripple_citizen"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_margin="10dp"
                        />
                    <LinearLayout
                        android:id="@+id/citizenTopTitle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/citizenListTitle"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/citizenName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Nom"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:gravity="start|center_vertical"
                            android:textColor="@color/ripple_citizen"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/citizenPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Contact"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:gravity="start|center_vertical"
                            android:textColor="@color/ripple_citizen"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:text="Infos"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:gravity="start|center_vertical"
                            android:textColor="@color/ripple_citizen"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/citizenRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/citizenTopTitle"
                        android:layoutAnimation="@anim/layout_animation"
                        android:layout_marginTop="0dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/hasScreenedRelativeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearActions"
                    android:layout_marginTop="20dp"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/hasScreenedListTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Liste des citoyens depistes"
                        android:textColor="@color/ripple_hasscreened"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_margin="10dp"
                        />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/hasScreenednTopTitle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/hasScreenedListTitle"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/hasScreenedName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Nom"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:gravity="start|center_vertical"
                            android:textColor="@color/ripple_hasscreened"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/hasScreenedPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Contact"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:gravity="start|center_vertical"
                            android:textColor="@color/ripple_hasscreened"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/hasScreenedStatus"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:text="Statut"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:gravity="start|center_vertical"
                            android:textColor="@color/ripple_hasscreened"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hasScreenedRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hasScreenednTopTitle"
                        android:layoutAnimation="@anim/layout_animation"
                        android:layout_marginTop="0dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>